    <script type="text/javascript">
        window.onload =function(){
            var speed = 1;
            var scroll_begin = document.getElementById("scroll_begin");
            var scroll_div = document.getElementById("scroll_div");
            var gongao = document.getElementById("gongao");
            // alert(scroll_div.scrollLeft)
            // console.time("haha")
            function Marquee(){
                if(gongao.scrollLeft - scroll_begin.offsetWidth >=1000 ){
                    gongao.scrollLeft -= gongao.scrollLeft;
                    
                }   
                else{
                    gongao.scrollLeft++
                    // console.log(gongao.scrollLeft)
                }
                console.log(gongao.scrollLeft - scroll_begin.offsetWidth)
            }
            
            setInterval(Marquee,speed)
            // console.timeEnd("haha")
        }
    </script>
